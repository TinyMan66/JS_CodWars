function howMuchILoveYou(nbPetals) {
  const sentence = {
    1: "I love you",
    2: "a little",
    3: "a lot",      
    4: "passionately",
    5: "madly",
    6: "not at all",
  }
    
  if (nbPetals <= 6){
    return sentence[nbPetals];
  }
  else if (nbPetals % 6 == 0){
    return sentence[6];
  }
  else {
    return sentence[nbPetals % 6];
  }
}
