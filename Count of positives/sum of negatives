function countPositivesSumNegatives(input) {
  let countPositives = 0;
  let sumNegatives = 0; 
  
  if (input === [] || input === null) {
      return [];
    } 
   
  for (i = 0; i < input.length; i++) {
    if (input[i] > 0){
      countPositives++;
    } else if (input[i] <= 0) {
      sumNegatives += input[i];
    } 
  }
  
  if(countPositives === 0 && sumNegatives === 0){
    return [];
  }
  
  return [countPositives, sumNegatives];
}
