//Task: given a word, if the length of the word is even, return two middle letters, if it is odd, then one middle letter.

function getMiddle(s) {
  if (s.length % 2 === 0) {
    return s.slice((s.length / 2 - 1), s.length / 2 + 1);
  } else {
    return s[Math.ceil(s.length / 2 - 1)];
  }
}


//arrow function
const getMiddle = s => s.length % 2 === 0? s.slice((s.length / 2 - 1), s.length / 2 + 1): s[Math.ceil(s.length / 2 - 1)];
